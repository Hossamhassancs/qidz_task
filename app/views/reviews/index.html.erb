<p id="notice"><%= notice %></p>

<h1>Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Movie</th>
      <th>Movie</th>
      <th>User</th>
      <th>Stars</th>
      <th>Review</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.movie %></td>
        <td><%= review.movie %></td>
        <td><%= review.user %></td>
        <td><%= review.stars %></td>
        <td><%= review.review %></td>
        <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h3> import review </h3>
<%= form_tag import_movies_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "upload review" %>
<% end %>

<%= link_to 'New Review', new_review_path %>
