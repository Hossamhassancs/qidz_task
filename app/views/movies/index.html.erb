<p id="notice"><%= notice %></p>

<h1>Movies</h1>
<%= form_tag movies_path, :method => 'get' do %>
  <%= text_field_tag :serach , params[:search] %>
  <%= submit_tag "Search for actor " %>
  <% end %>




<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Year</th>
      <th>Director</th>
      <th>Actor<th>
      <th>Film location</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.description %></td>
        <td><%= movie.year %></td>
        <td><%= movie.director %></td>
        <td><%= movie.actor %></td>
        <td><%= movie.film_location %></td>
        <td><%= movie.country %></td>
        <td><%= link_to 'Show', movie %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<h3> import movies </h3>
<%= form_tag import_movies_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "upload movies" %>
<% end %>
<%= link_to 'New Movie', new_movie_path %>
